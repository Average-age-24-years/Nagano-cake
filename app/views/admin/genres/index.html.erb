<div class="container">
  <div class="row">
    <div class="col-sm-10 col-lg-6 offset-md-1">
      <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">　ジャンル一覧・追加　</h5>
      <%= form_with model: [:admin, @genre] do |f| %>
        <div class="d-flex mb-5">
          <p class="text-nowrap">ジャンル名</p>
          <div class="mx-5"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
          <%= f.submit "新規投稿", class: "btn btn-success" %>
        </div>
      <% end %>
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tbody>
            <tr>
              <td><%= genre.name %></td>
              <td style="width:30%"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
