<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-2 d-flex">
      <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">　商品詳細　</h5>
    </div>
    <div class="col-md-8 offset-2 d-flex">
      <div class="mr-3">
        <%= attachment_image_tag @product, :image, size: '250x200', format:'jpeg', fallback: 'sample.jpg', class: "mr-5" %>
      </div>
      <div>
        <div class="d-flex">
          <p style="width: 150px">商品名</p>
          <h5><%= @product.name %></h5>
        </div>
        <div class="d-flex">
          <p style="width: 150px">商品説明</p>
          <h5 class="my-2"><%= @product.introduction %></h5>
        </div>
        <div class="d-flex">
          <p style="width: 150px">ジャンル</p>
          <h5 class="mt-5 mb-3"></h5>
        </div>
        <div class="d-flex">
          <p style="width: 150px">税込価格<br>(税抜価格)</p>
          <h5 class="font-weight-normal"><%= @tax_price.to_i.to_s(:delimited) %> (<%= @product.price.to_s(:delimited) %>) 円</h5>
        </div>
        <div class="d-flex">
          <p style="width: 150px">販売ステータス</p>
          <% if @product.is_active? %>
            <h5 class="text-success">販売中</h5>
          <% else %>
            <h5 class="text-secondary">販売停止中</h5>
          <% end %>
        </div>
        <div class="text-center">
          <%= link_to "編集する", edit_admin_product_path, class: "btn btn-lg btn-success mt-5" %>
        </div>
      </div>
    </div>
  </div>
</div>