<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">　商品新規登録　</h5>
      <div class="mx-auto d-table">
        <%= form_with model: [:admin, @product], local: true do |f| %>
          <div class="d-flex">
            <p style="width: 150px;">商品画像</p>
            <%= f.attachment_field :image, placeholder: "ファイルを選択" %>
          </div>
          <div class="d-flex my-3">
            <p style="width: 150px;">商品名</p>
            <%= f.text_field :name, size: "40", placeholder: "商品名" %>
          </div>
          <div class="d-flex">
            <p style="width: 150px;">商品説明</p>
            <%= f.text_area :introduction, size: "40x5", placeholder: "ここに説明文を記述します" %>
          </div>
          <div class="d-flex my-3">
            <p style="width: 150px;">ジャンル</p>
            <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "--選択してください--　" } %>
          </div>
          <div class="d-flex">
            <p style="width: 150px;">税抜価格</p>
            <%= f.text_field :price, size: "40", placeholder: "1000" %><div class="mt-3 ml-1">円</div>
          </div>
          <div class="d-flex my-3">
            <p style="width: 150px;">販売ステータス</p>
            <%= f.radio_button :is_active, :true, class: "mr-1 mt-1" %>
            <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :is_active, :false, class: "mr-1 ml-3 mt-1" %>
            <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
          </div>
          <div class="text-center"><%= f.submit "新規登録", class: "btn btn-success btn-lg" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>