<div class="container">
  <h2 class='mt-5'><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
    <%= render 'layouts/errors_messages', model: @customer %>
    <%= form_with model: @customer, url: admin_customer_path, local: true do |f| %>

        <div class="row mt-5">
          <div class="col-md-3">会員ID</div>
          <div class="col-md-5"><%= @customer.id %></div>
        </div>

        <form class="form-horizontal">
          <div class="form-group form-row mt-3">
            <label class="col-md-3 control-label"><%= f.label :名前 %></label></br>
            <div class="col-md-2"><%= f.text_field :last_name, autofocus: true, class: "form-control" %></div>
            <div class="col-md-2"><%= f.text_field :first_name, class: "form-control" %></div>
          </div>

          <div class="form-group form-row">
            <label class="col-md-3 control-label"><%= f.label :フリガナ %></label></br>
            <div class="col-md-2"><%= f.text_field :last_name_kana, class: "form-control" %></div>
            <div class="col-md-2"><%= f.text_field :first_name_kana, class: "form-control" %></div>
          </div>

          <div class="form-group form-row">
            <label class="col-md-3 control-label"><%= f.label :メールアドレス %></label>
            <div class="col-md-4"><%= f.email_field :email, autocomplete: "email", class: "form-control" %></div>
          </div>

          <div class="form-group form-row">
            <label class="col-md-3 control-label"><%= f.label :郵便番号（ハイフンなし） %></label>
            <div class="col-md-4"><%= f.text_field :postal_code, class: "form-control" %></div>
          </div>

          <div class="form-group form-row">
            <label class="col-md-3 control-label"><%= f.label :住所 %></label>
            <div class="col-md-8"><%= f.text_field :address, class: "form-control" %></div>
          </div>

          <div class="form-group form-row">
            <label class="col-md-3 control-label"><%= f.label :電話番号（ハイフンなし） %></label>
            <div class="col-md-4"><%= f.telephone_field :telephone_number, class: "form-control" %></div>
          </div>

          <div class="form-group form-row">
            <label class="col-md-3 control-label"><%= f.label :会員ステータス %></label>
            <div class="col-md-4"><label class="mr-2"><%= f.radio_button :is_deleted, false %>有効</label>
                                  <label><%= f.radio_button :is_deleted, true %>退会</label>
            </div>
          </div>

          <div class="actions">
            <div class="col-md-5"><%= f.submit "変更を保存", class: 'btn btn-success' %></div>
          </div>
      </form>
    <% end %>
</div>