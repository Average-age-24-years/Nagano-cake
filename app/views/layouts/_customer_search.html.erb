  <div class="container mt-3">
  <div class="search-form text-right">
  <%= form_with url: public_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "ジャンル" => "genre", "商品名" => "product" }) %>
    <div class="fas fa-search d-inline-block"><%= f.submit '検索', class: "btn btn-sm btn-secondary" %></div>
  <% end %>
</div>
</div>
