  <div class="container">
  <div class="search-form text-right">
  <%= form_with url: public_search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "Genre" => "genre", "Product" => "product" }) %>
    <%= button_tag sanitize('<i class="fa fa-search"></i>'), :type => "submit",:class =>"btn btn-default btn-s-md" %>
  <% end %>
</div>
</div>