
<% if @model == 'genre' %>
  <div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
     <h3 class="mt-3">商品検索結果 "<%= @content %>"</h3>
      <h5 class="mt-3 mb-3 d-table" style="background-color: #e6e3de;">　商品一覧　</h5>
      <p class= mb-1>　(全<%= @active_products.count %>件)</p>
        <div class="d-flex flex-wrap">
        <% @record.each do |product| %>
        <% @records.each do |genre| %>
             <div class="mr-4 mb-4">
             <%= link_to public_product_path(product) do %>
                <%= attachment_image_tag product, :image, size: '200x150', format:'jpeg', fallback: 'sample.jpg' %>
              <% end %>
              <div class="my-2"><%= link_to "#{product.name}", public_product_path(product) %></div>
              <div>¥<%= product.price.to_s(:delimited) %></div>
            　<div><%= genre.name %></div>
                <% if product.is_active? %>
                  <div class="text-success">販売中</div>
                <% else %>
                  <div class="text-secondary">販売停止中</div>
                <% end %> 
                </div>
        <% end %>
        <% end %>
        </div>
    </div>
  </div>
</div>
<% elsif @model == 'product'%>
  <div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
     <h3 class="mt-3">商品検索結果 "<%= @content %>"</h3>
      <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">　商品一覧　</h5>
        <div class="d-flex flex-wrap">
          <% @records.each do |product| %>
            <div class="mr-4 mb-4">
              <%= link_to public_product_path(product) do %>
                <%= attachment_image_tag product, :image, size: '200x150', format:'jpeg', fallback: 'sample.jpg' %>
              <% end %>
                <div><%= link_to "#{product.name}", admin_product_path(product) %></div>
                <div><%= product.price.to_s(:delimited) %></div>
                <div><%= Genre.find_by(id: product.genre_id).name %></div>
                <% if product.is_active? %>
                  <div class="text-success">販売中</div>
                <% else %>
                  <div class="text-secondary">販売停止中</div>
                <% end %>
                </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

<% end %>