
<% if @model == 'genre' %>
  <div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
     <h3 class="mt-3">商品検索結果 "<%= @content %>"</h3>
      <h5 class="mt-3 mb-3 d-table" style="background-color: #e6e3de;">商品一覧</h5>
      <p class= mb-1>(全<%= @records.count %>件)</p>
        <div class="d-flex flex-wrap">
        <% @records.each do |search| %>
             <div class="mr-4 mb-4">
             <%= link_to public_product_path(search) do %>
                <%= attachment_image_tag search, :image, size: '200x150', format:'jpeg', fallback: 'sample.jpg' %>
              <% end %>
              <div>商品名: <%= link_to "#{search.name}", public_product_path(search) %></div>
             <div>値段(税抜き): ¥<%= search.price.to_s(:delimited) %></div>
            <div>ジャンル: <%= search.name %></div>
                </div>
        <% end %>
        </div>
    </div>
  </div>
</div>
<% elsif @model == 'product'%>
  <div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
     <h3 class="mt-3">商品検索結果 "<%= @content %>"</h3>
      <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">商品一覧</h5>
      <p class= mb-1>(全<%= @records.count %>件)</p>
        <div class="d-flex flex-wrap">
          <% @records.each do |search| %>
            <div class="mr-4 mb-4">
              <%= link_to public_product_path(search) do %>
                <%= attachment_image_tag search, :image, size: '200x150', format:'jpeg', fallback: 'sample.jpg' %>
              <% end %>
                <div>商品名: <%= link_to "#{search.name}", admin_product_path(search) %></div>
                <div>値段(税抜き): <%= search.price.to_s(:delimited) %></div>
                <div>ジャンル: <%= Genre.find_by(id: search.genre_id).name %></div>
                </div>
          <% end %>
        </div>
    </div>
  </div>
</div>

<% end %>

