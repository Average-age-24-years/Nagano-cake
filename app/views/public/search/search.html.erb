<% if @model == 'genre' %>
 <%= render 'layouts/customer_search' %>
 <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h3 class="my-5">商品検索結果 "<%= @content %>"</h3>
        <div class="d-flex flex-wrap">
          <%= render "public/products/products_index", products: @records %>
          <%= paginate @records %>
        </div>
        <% if @records.count == 0 %>
          <div class="d-flex align-items-center justify-content-center" style="height:250px;">
            <h4>該当する商品はありません</h4>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% elsif @model == 'product'%>
  <%= render 'layouts/customer_search' %>
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <h3 class="mt-3">商品検索結果 "<%= @content %>"</h3>
        <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">商品一覧</h5>
        <p class= mb-1>(全<%= @records.count %>件)</p>
        <div class="d-flex flex-wrap">
          <%= render "public/products/products_index", products: @records %>
        </div>
      </div>
      <% if @records.count == 0 %>
        <div class="d-flex align-items-center justify-content-center" style="height:250px;">
          <h4>該当する商品はありません</h4>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
