<div class="container">
  <h2 class='mt-5'>新規会員登録</h2>
    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
      <%= render "public/customers/shared/error_messages", resource: resource %>
        <form class="form-horizontal">
          <div class="form-group mt-5">
            <label class="col-md-2 control-label"><%= f.label :名前 %></label></br>
            <label class="col-md-2 control-label"><%= f.label:（性）%></label>
            <div class="col-md-3"><%= f.text_field :last_name, autofocus: true, class: "form-control" %></div>
            <label class="col-md-2 control-label mt-3"><%= f.label :（名） %></label>
            <div class="col-md-3"><%= f.text_field :first_name, autofocus: true,  class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-2 control-label"><%= f.label :フリガナ %></label></br>
            <label class="col-md-2 control-label"><%= f.label :（セイ） %></label>
            <div class="col-md-3"><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></div>
            <label class="col-md-2 control-label mt-3"><%= f.label :（カナ） %></label>
            <div class="col-md-3"><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label"><%= f.label :メールアドレス %></label>
            <div class="col-md-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label"><%= f.label :郵便番号（ハイフンなし） %></label>
            <div class="col-md-5"><%= f.text_field :postal_code, autofocus: true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label"><%= f.label :住所 %></label>
            <div class="col-md-9"><%= f.text_field :address, autofocus: true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label"><%= f.label :電話番号（ハイフンなし） %></label>
            <div class="col-md-5"><%= f.telephone_field :telephone_number, autofocus: true, class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label"><%= f.label :パスワード（６文字以上） %></label>
            <div class="col-md-5"><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label"><%= f.label :パスワード（確認用） %></label>
            <div class="col-md-5"><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></div>
          </div>

          <div class="actions">
            <div class="col-md-5"><%= f.submit "新規登録", class: 'btn btn-success' %></div>
          </div>
      </form>
    <% end %>
  <h4 class='mt-5'>すでに登録済みの方</h4>
  <p class='mt-3'><%= link_to "こちら", new_customer_session_path %>からログインして下さい</p>
</div>
