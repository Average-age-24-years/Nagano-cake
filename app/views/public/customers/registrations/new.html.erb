<h2 class='mt-5'>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/customers/shared/error_messages", resource: resource %>
    <dl>
      <div class="field">
        <dt><%= f.label :名前 %></dt>
        <%= f.label:（性）%>
        <%= f.text_field :last_name, autofocus: true, size: 30, class: 'ml-4' %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name, autofocus: true, size: 30, class: 'ml-4' %>
      </div>

      <div class="field">
        <dt><%= f.label :フリガナ %></dt>
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana, autofocus: true, size: 30, class: 'ml-2' %>
        <%= f.label :（カナ） %>
        <%= f.text_field :first_name_kana, autofocus: true, size: 30, class: 'ml-2' %>
      </div>

      <div class="field">
        <dt><%= f.label :メールアドレス %></dt>
        <dd><%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %></dd>
      </div>

      <div class="field">
        <dt><%= f.label :郵便番号（ハイフンなし） %></dt>
        <dd><%= f.text_field :postal_code, autofocus: true, size: 40 %></dd>
      </div>

      <div class="field">
        <dt><%= f.label :住所 %></dt>
        <dd><%= f.text_field :address, autofocus: true, size: 80 %></dd>
      </div>

      <div class="field">
        <dt><%= f.label :電話番号（ハイフンなし） %></dt>
        <dd><%= f.telephone_field :telephone_number, autofocus: true, size: 40 %></dd>
      </div>

      <div class="field">
        <dt><%= f.label :パスワード（６文字以上） %></dt>
        <% if @minimum_password_length %>
        <% end %>
        <dd><%= f.password_field :password, autocomplete: "new-password", size: 40 %></dd>
      </div>
      
      <div class="field">
        <dt><%= f.label :パスワード（確認用） %></dt>
        <dd><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 40 %></dd>
      </div>

      <div class="actions">
        <dd><%= f.submit "新規登録", class: 'btn btn-success' %></dd>
      </div>
    </dl>
<% end %>

<h4>すでに登録済みの方</h4>
<p><%= link_to "こちら", new_customer_session_path %>からログインして下さい</p>
