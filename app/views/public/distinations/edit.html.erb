<div class="container">
  <h2 class='mt-5'>配送先編集</h2>
  <%= form_with model:[@customer, @distination], url: public_distination_path, local: true do |f| %>
    <form class="form-horizontal">
      <div class="form-group">
        <label class="col-md-3 control-label"><%= f.label :郵便番号 %></label>
        <div class="col-md-5"><%= f.text_field :postal_code, autofocus: true, autocomplete: "email", class: "form-control" %></div>
      </div>

      <div class="form-group">
        <label class="col-md-3 control-label"><%= f.label :住所 %></label>
        <div class="col-md-5"><%= f.text_field :address, autofocus: true, autocomplete: "email", class: "form-control" %></div>
      </div>

      <div class="form-group">
        <label class="col-md-3 control-label"><%= f.label :宛名 %></label>
        <div class="col-md-5"><%= f.text_field :name, autofocus: true, autocomplete: "email", class: "form-control" %></div>
      </div>

      <div class="actions">
        <div class="col-md-5"><%= f.submit "変更内容を保存", class: 'btn btn-success' %></div>
      </div>
    </form>
  <% end %>
</div>