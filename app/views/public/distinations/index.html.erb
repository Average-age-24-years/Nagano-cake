<div class="container">
  <h2 class='mt-5'>配送先登録/一覧</h2>
  　<%= form_with model:[@customer, @distination], url: public_distinations_path, local: true do |f| %>
      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-md-3 control-label"><%= f.label :郵便番号 %></label>
          <div class="col-md-5"><%= f.text_field :postal_code, autofocus: true, class: "form-control" %></div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label"><%= f.label :住所 %></label>
          <div class="col-md-5"><%= f.text_field :address, autofocus: true, class: "form-control" %></div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label"><%= f.label :宛名 %></label>
          <div class="col-md-5"><%= f.text_field :name, autofocus: true, class: "form-control" %></div>
        </div>

        <div class="actions">
          <div class="col-md-5"><%= f.submit "新規登録", class: 'btn btn-success' %></div>
        </div>
      </form>
    <% end %>

  <div class="col-8">
    <table class="table table-bordered mt-5">
      <thead class="thead-light">
        <tr><th>郵便番号</th><th>住所</th><th>宛名</th><th>ボタン</th></tr>
      </thead>
        <% @distinations.each do |d| %>
          <tbody>
            <tr>
              <td><%= d.postal_code %></td>
              <td><%= d.address %></td>
              <td><%= d.name %></td>
              <td><%= link_to "編集する", edit_public_distination_path(d), class: "btn btn-success mr-2" %>
                  <%= link_to "削除する", public_distination_path(d), method: :delete, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        <% end %>
    </table>
  </div>
</div>

