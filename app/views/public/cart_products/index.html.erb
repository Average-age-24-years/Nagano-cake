<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <div class="d-flex">
        <h5 class="mt-3 mb-5 d-table" style="background-color: #e6e3de;">　ショッピングカート　</h5>
        <%= link_to "カートを空にする", public_all_destroy_path, class: "btn btn-sm-btn-danger" %>
      </div>

        <table class="table table-botdered">
          <thead class="thead-light">
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          <% @cart_products.each do |cart_product| %>
            <tbody>
              <tr>
                <td><%= attachment_image_tag cart_product.product, :image, size: '80x60', format:'jpeg', class: "mr-3" %><%= cart_product.product.name %></td>
                <td><%= (cart_product.product.price * 1.10).round.to_s(:delimited) %></td>
                <td>
                  <%= form_with model: @cart_product, url: {controller: 'cart_products', action: 'update', id: cart_product.id, product_id: cart_product.product_id } do |f| %>
                    <%= f.select :quantity, options_for_select(1..20) %>
                    <%= f.submit "変更" %>
                  <% end %>
                </td>
                <td><%= ((cart_product.product.price * 1.10) * cart_product.quantity).round.to_s(:delimited) %></td>
                <td><%= link_to "削除する", public_destroy_cart_products_path(cart_product, cart_product.product_id), class: "btn btn-sm btn-danger" %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
