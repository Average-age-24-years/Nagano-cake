<div class="container">
  <h2 class='mt-5'>注文情報入力</h2>
  <%= form_with model: @order, url: public_orders_confirm_path, method: :get, local: true do |f| %>
  <h4 class='mt-4'>支払い方法</h4>
  <div class="radio">
    <label><%= f.radio_button :payment, :"クレジットカード", checked: true, class: "mr-2" %>クレジットカード</label></br>
    <label><%= f.radio_button :payment, :"銀行振込", class: "mr-2" %>銀行振込</label>
  </div>

  <h4 class='mt-4'>お届け先</h4>
  <div class="radio">
    <label class='mt-3'><%= f.radio_button :radio, :"radio1", checked: true, class: "mr-2" %>ご自身の住所</label></br>
        <p><%= @customer_address %></p>
    <label class='mt-3'>
      <%= f.radio_button :radio, :"radio2", class: "mr-2" %>登録済み住所から選択
    </label></br>
    <div class='select col-md-8'>
      <%= f.collection_select(:id, @distinations, :id, :full_address) %>
    </div>
  </div>

  <label class='mt-4'><%= f.radio_button :radio, :"radio3" , class: "mr-2" %>新しいお届け先</label></br>
  <div class="form-group form-row">
    <label class="col-md-3 control-label"><%= f.label :郵便番号 %></label>
    <div class="col-md-4"><%= f.text_field :post_code, class: "form-control" %></div>
  </div>

  <div class="form-group form-row">
    <label class="col-md-3 control-label"><%= f.label :住所 %></label>
    <div class="col-md-8"><%= f.text_field :address, class: "form-control" %></div>
  </div>

  <div class="form-group form-row">
    <label class="col-md-3 control-label"><%= f.label :宛名 %></label>
    <div class="col-md-4"><%= f.text_field :name, class: "form-control" %></div>
  </div>

  <div class="col-md-5"><%= f.submit "確認画面へ進む", class: 'btn btn-brown rounded-0 mt-4' %></div>
  <% end %>
</div>