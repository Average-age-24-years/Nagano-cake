<div class="container">
  <div class="row">
    <div class="col-md-10 offset-1">
      <div class="d-flex">
        <h4>商品一覧</h4>
        <p>　(全<%= @active_products.count %>件)</p>
      </div>
      <div class="d-flex">
        <% @products.each do |product| %>
          <% if product.is_active? %>
            <div class="mr-4">
              <%= link_to public_product_path(product) do %>
                <%= attachment_image_tag product, :image, size: '200x150', format:'jpeg', fallback: 'sample.jpg' %>
              <% end %>
              <div><%= link_to "#{product.name}", public_product_path(product) %></div>
              <div>¥<%= product.price.to_s(:delimited) %></div>
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @products %>
    </div>
  </div>
</div>