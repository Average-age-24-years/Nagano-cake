<div class="container mt-3">
  <div class="row">
    <div class="col-md-8 offset-2 d-flex">
      <div class="mr-3">
        <%= attachment_image_tag @product, :image, size: '250x180', format:'jpeg', fallback: 'sample.jpg' %>
      </div>
      <div>
        <h5 class="font-weight-bold"><%= @product.name %></h5>
        <div class="my-2"><%= @product.introduction %></div>
        <div class="mt-5 mb-3">¥<%= @tax_price.to_i %><span class="small">(税込)</span></div>
        <%= form_with model: @cart_product, url: {controller: 'cart_products', action: 'create' } do |f| %>
          <%= f.select :quantity, options_for_select(1..20), include_blank: "個数選択" %>
          <%= f.hidden_field :product_id, value: @product.id %>
          <%= f.submit 'カートに入れる', class: "btn btn-sm btn-success ml-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>